{
  "name": "lenny-podcast-transcript-site",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build:data": "python3 src/site_data.py",
    "build": "next build",
    "build:site": "npm run build:data && next build",
    "build:pages": "python3 src/site_data.py --rss $RSS_URL --allow-fallback && next build && npx @cloudflare/next-on-pages",
    "deploy:pages": "wrangler pages deploy .vercel/output/static --project-name lenny-s-podcast --commit-dirty=true --no-bundle"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.12.0",
    "@types/node": "25.0.8",
    "@types/react": "19.2.8",
    "typescript": "5.9.3"
  }
}
